            <source src="http://b1453b95e76d4e3a87dc-6994ecbbd2d8c2e37b1dfdf39ec101fc.r20.cf1.rackcdn.com/34/50/01/34500109/ad_34500109_11eb70120ac9fd95_web.mp4">
          </video>
        </div>
      </div>
    </div>
  </section>

  <div class="ProgBarHolder" style="background-color:blue; border-top: 1px solid black; height:25px">
